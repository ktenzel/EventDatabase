{{#partial "content"}}

<p>Here are all the presenters speaking during:  {{ events.name }}</p>


<ul>
    {{#each speakers}}
    <li>
        <h3>Speaker: {{ firstName }} {{ lastName }}</h3>
        <p>Background: {{ background }}</p>
        <br>
        <a href="/events/{{id}}/speakers/{{id}}/update">Edit this speaker</a>
        <br>
        <a href="/events/{{id}}/speakers/{{id}}/delete">Delete this speaker</a>
    </li>
    {{/each}}
</ul>

<p>Event Description: {{ events.description }}</p>
<br>
<br>
<a href="/events/update">Edit this Event</a>
<br>
<a href="/events/delete">DELETE this Event</a>

{{/partial}}

